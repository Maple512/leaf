{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "types": ["jest"],
    "paths": {
      "@leaf/ng.core": ["packages/core/src/public-api.ts"],
      "@leaf/ng.control/shared": ["apps/control/app/shared/index"],
      "@leaf/ng.control/core": ["apps/control/app/core/index"],
      "@leaf/ng.control/env/*": ["apps/control/environments/*"]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "enabledIvy":false
  }
}
