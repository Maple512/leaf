{
  "compileOnSave": false,
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../../out-tsc/app",
    "types": [
      "node"
    ],
    "paths": {
      "@shared": [
        "apps/control/app/shared/index"
      ],
      "@core": [
        "apps/control/app/core/index"
      ],
      "@env/*": [
        "apps/control/environments/*"
      ]
    }
  },
  "files": ["main.ts", "polyfills.ts"],
  "include": ["**/*.ts"],
  "exclude": ["test.ts", "**/*.spec.ts"]
}
